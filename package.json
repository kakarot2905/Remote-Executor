{
  "name": "cmd-executor",
  "version": "0.2.0",
  "description": "Distributed Command Executor with Worker Nodes (Phase 2)",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "worker": "node worker-agent.js",
    "quickstart": "node quickstart.js",
    "electron": "electron electron/main.js",
    "electron:dev": "NODE_ENV=development electron electron/main.js",
    "electron:build": "electron-builder"
  },
  "build": {
    "appId": "com.cmdexecutor.worker",
    "productName": "CMD Executor Worker",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "worker-agent.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/assets/icon.png"
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "bcryptjs": "^3.0.3",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.563.0",
    "mongodb": "^7.0.0",
    "next": "16.1.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
